<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding = "5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/entryImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/entryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/entryNetflix"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/netflix"/>

            <ImageView
                android:id="@+id/entryDisney"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/disney"/>

            <ImageView
                android:id="@+id/entryPrime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/prime"/>

            <ImageView
                android:id="@+id/entryCrunchyroll"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/crunchyrollpng"/>

            <ImageView
                android:id="@+id/entryBluray"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/bluray"/>

            <ImageView
                android:id="@+id/entryBBC"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/bbc"/>

            <ImageView
                android:id="@+id/entryITV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/itv"/>

            <ImageView
                android:id="@+id/entryALL4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/all4"/>

            <ImageView
                android:id="@+id/entryMY5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/my5"/>

            <ImageView
                android:id="@+id/entryUKTV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:src="@drawable/uktv"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>